      device.vm.network "private_network", virtualbox__intnet: "#{simid}_net16", auto_config: false , :mac => "44383900001d"
      
      # link for swp2 --> r10-b:eth0
      device.vm.network "private_network", virtualbox__intnet: "#{simid}_net17", auto_config: false , :mac => "44383900001f"
      
      # link for swp3 --> r10-a:eth0
      device.vm.network "private_network", virtualbox__intnet: "#{simid}_net18", auto_config: false , :mac => "443839000021"
      
      # link for swp4 --> itb-ce-b:eth0
